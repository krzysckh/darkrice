{
  "coc.preferences.formatOnType": true,
  "coc.preferences.enableLinkedEditing": true,
  "diagnostic.floatConfig": {
    "rounded": false,
    "border": false
  },
  "hover.floatConfig": {
    "rounded": false,
    "border": false
  },

  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "pullDiagnostic.onChange": false,
  "pullDiagnostic.onSave": true,
  "inlayHint.enable": false,

  "semanticTokens.enable": false,

  "languageserver": {
    "perlnavigator": {
      "command": "node",
      "args": [
        "/home/krzych/nmojeprogramy/PerlNavigator/server/out/server.js",
        "--stdio"
      ],
      "filetypes": ["perl"]
    },
    "fennel-language-server": {
      "command": "fennel-language-server",
      "args": [
        "lsp",
        "stdio"
      ],
      "filetypes": ["fennel"]
    },
    "vls": {
      "command": "/home/krzych/.vls/bin/vls_linux_x64",
      "args": [],
      "filetypes": ["vlang"]
    },
    "vala": {
      "command": "vala-language-server",
      "filetypes": ["vala", "genie"]
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  }
}
